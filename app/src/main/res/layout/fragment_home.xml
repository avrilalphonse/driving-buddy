<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:colorBackground"
    tools:context="com.drivingbuddy.ui.home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- welcome  -->
        <TextView
            android:id="@+id/welcome_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/onBackground"
            android:gravity="start"
            android:paddingBottom="1dp"
            android:paddingTop="8dp" />

        <!-- music button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="0dp"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_start_drive_music"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="Tune In! ðŸŽ¶"
                android:textColor="@android:color/black"
                android:backgroundTint="@color/sand"
                android:elevation="2dp" />

        </LinearLayout>

        <!-- Title -->
        <TextView
            android:id="@+id/home_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/stats_title"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="26sp" />

        <!-- Long Term Insight Summary -->
        <TextView
            android:id="@+id/long_term_insight_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/long_term_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:paddingBottom="12dp" />

        <!-- Insights Graph -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/long_term_insight_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <!-- Goals Title -->
        <TextView
            android:id="@+id/goal_summary_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_goal_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:paddingBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/home_goal_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:overScrollMode="never" />

        
        <TextView
            android:id="@+id/no_goals_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/zero_goals"
            android:textSize="16sp"
            android:textColor="?attr/colorOnBackground"
            android:gravity="center"
            android:visibility="gone"
            android:padding="8dp" />

    </LinearLayout>
</ScrollView>
