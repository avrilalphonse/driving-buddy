<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?android:colorBackground"
    tools:context="com.drivingbuddy.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Statistics"
            android:textColor="?attr/colorOnBackground"
            android:textStyle="bold"
            android:padding="8dp"
            android:textSize="26sp" />

        <!-- Long Term Insight Summary -->
        <TextView
            android:id="@+id/long_term_insight_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long Term Insight Summary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:paddingBottom="12dp" />

        <!-- Insights Graph -->
        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/long_term_insight_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="16dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground" />

        <!-- Goals Title -->
        <TextView
            android:id="@+id/goal_summary_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Goal Summary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnBackground"
            android:paddingBottom="12dp" />

        <!-- Goal 1 -->
        <LinearLayout
            android:id="@+id/goal1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"
            app:cardCornerRadius="12dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_card_background">
        <TextView
                android:id="@+id/goal1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal 1: Decrease hard braking"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goal1_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down 80% over the last week"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/goal1_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Great Job!"
                android:textSize="14sp"
                android:textColor="?attr/colorOnBackground" />
        </LinearLayout>

        <!-- Goal 2 -->
        <LinearLayout
            android:id="@+id/goal2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"
            app:cardCornerRadius="12dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_card_background">

        <TextView
                android:id="@+id/goal2_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal 2: xxxxxx"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goal2_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up xx% over the last week"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/goal2_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Needs more work!"
                android:textSize="14sp"
                android:textColor="?attr/colorOnBackground" />
        </LinearLayout>

        <!-- Goal 3 -->
        <LinearLayout
            android:id="@+id/goal3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_marginBottom="8dp"
            android:clipToPadding="false"
            app:cardCornerRadius="12dp"
            android:elevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/ripple_card_background">

        <TextView
                android:id="@+id/goal3_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Goal 3: xxxxxx"
                android:textSize="16sp"
                android:textColor="?attr/colorOnBackground"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/goal3_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up xx% over the last week"
                android:textSize="14sp"
                android:textColor="?attr/colorPrimary" />

            <TextView
                android:id="@+id/goal3_feedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Needs more work!"
                android:textSize="14sp"
                android:textColor="?attr/colorOnBackground" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
