<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.drivingbuddy.ui.home.HomeFragment"
        android:label="Home" />

    <fragment
        android:id="@+id/insightsFragment"
        android:name="com.drivingbuddy.InsightsFragment"
        android:label="Insights" />

    <fragment
        android:id="@+id/goalsFragment"
        android:name="com.drivingbuddy.ui.goals.GoalsFragment"
        android:label="Goals" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.drivingbuddy.ui.settings.SettingsFragment"
        android:label="Settings">
        <action
            android:id="@+id/action_settings_to_profile"
            app:destination="@+id/profileFragment" />
    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.drivingbuddy.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile">
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.drivingbuddy.ui.auth.LoginFragment"
        android:label="Log In">
        <action
            android:id="@+id/action_loginFragment_to_signupFragment"
            app:destination="@id/signupFragment" />
    </fragment>

    <fragment
        android:id="@+id/signupFragment"
        android:name="com.drivingbuddy.ui.auth.SignupFragment"
        android:label="Sign Up" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/dataCollectionFragment"
        android:name="com.drivingbuddy.ui.settings.DataCollectionFragment"
        android:label="@string/privacy_title" />

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.drivingbuddy.ui.settings.NotificationsFragment"
        android:label="@string/notifs_title" />

    <fragment
        android:id="@+id/termsFragment"
        android:name="com.drivingbuddy.ui.settings.TermsFragment"
        android:label="@string/perms_title" />

</navigation>